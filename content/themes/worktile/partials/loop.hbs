{{!-- The template below includes the markup for each post --}}

<div class="wt-loop uk-margin">
  <div class="uk-grid-column-small uk-grid-row-small uk-child-width-1-3@s uk-grid" uk-grid>
    {{#foreach posts}}
    <div class="item">
      <div class="uk-card uk-card-default ">
        <div class="uk-card-body">
          <a href="{{url}}">
            <div class="loop-img" tabindex="0">
              {{#if feature_image}}
              <div class="uk-background-cover" data-src="{{img_url feature_image size="m"}}" uk-img>

              </div>
              {{/if}}
            </div>
            <h2> {{title}} </h2>
            <p>{{excerpt}}</p>
          </a>
        </div>

        <div class="uk-card-footer uk-flex uk-flex-between uk-flex-middle">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-auto">
              <img class="uk-border-circle" width="40" height="40"
                src="{{img_url primary_author.profile_image size="xs"}}">
            </div>
            <div class="uk-width-expand">
              <span>{{authors}}</span>
            </div>
          </div>
          <time>{{date published_at format="YYYY-MM-DD"}}</time>
        </div>
      </div>
    </div>


    {{/foreach}}
  </div>
</div>

{{pagination}}
