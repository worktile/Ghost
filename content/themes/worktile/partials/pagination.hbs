{{!--
This pagination template is used to navigate through newer and older articles.
--}}

<div class="l-wrapper">
  <nav class="wt-pagination uk-flex uk-flex-center uk-flex-middle">
    {{#if prev}}
    <a href="{{page_url prev}}" class="wt-pagination-btn" aria-label="上一页">
     <span uk-icon="chevron-left"></span>
    </a>
    {{/if}}
    <span class="m-pagination__text">{{t "Page"}} {{page}} {{t "of"}} {{pages}}</span>
    {{#if next}}
    <a href="{{page_url next}}" class="wt-pagination-btn" aria-label="下一页">
      <span uk-icon="chevron-right"></span>
    </a>
    {{/if}}
  </nav>
</div>